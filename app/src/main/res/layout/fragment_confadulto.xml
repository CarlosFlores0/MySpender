<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrolladulto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/adulto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mytoolbarAdulto"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Adulto"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="35dp"
                app:fontFamily="sans-serif-condensed-light" />

            <ImageView
                android:id="@+id/imagendogomayor"
                android:layout_width="270dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/dogrealistas"/>

            <TextView
                android:id="@+id/textQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="¿Cómo es tu mascota?"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"
                app:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/textSizeAdulto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="30dp"
                android:text="Tamaño"
                android:textColor="@color/colorBlack"
                android:textSize="25dp"
                app:fontFamily="sans-serif-light" />

            <SeekBar
                android:id="@+id/seekBarSizeAdulto"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:max="50" />

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/optionSizeAdulto1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Miniatura"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:fontFamily="sans-serif-light"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/optionSizeAdulto2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Pequeño"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:fontFamily="sans-serif-light" />

                <TextView
                    android:id="@+id/optionSizeAdulto3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Mediano"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:fontFamily="sans-serif-light" />

                <TextView
                    android:id="@+id/optionSizeAdulto4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Grande"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:fontFamily="sans-serif-light" />
            </LinearLayout>

            <TextView
                android:id="@+id/textWeightAdulto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="@string/Weight"
                android:textColor="#000"
                android:textSize="24sp"
                app:fontFamily="sans-serif-light" />

            <SeekBar
                android:id="@+id/seekBarWeightAdulto"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:max="40" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textMinWeightAdulto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_weight="0.2"
                    android:paddingLeft="25dp"
                    android:text="0 kg"
                    android:textAlignment="textStart"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:fontFamily="sans-serif-light"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/textMaxWeightAdulto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_weight="0.2"
                    android:paddingRight="25dp"
                    android:text="40 kg"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:fontFamily="sans-serif-light"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <TextView
                android:id="@+id/textActivityAdulto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:text="@string/PhysicalActivity"
                android:textColor="#000"
                android:textSize="24sp"
                app:fontFamily="sans-serif-light" />

            <SeekBar
                android:id="@+id/seekBarActivityAdulto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:max="10" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/optionActivityBaja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="Baja"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:fontFamily="sans-serif-light"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/optionActivityNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="Normal"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:fontFamily="sans-serif-light" />

                <TextView
                    android:id="@+id/optionActivityAlta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="Alta"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    app:fontFamily="sans-serif-light" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonComenzar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonrec"
                android:fontFamily="sans-serif-condensed-light"
                android:onClick="ActivateFuzzySystem"
                android:text="Siguiente"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>