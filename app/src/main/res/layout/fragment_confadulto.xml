<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollcachorro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/cachorro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/mytoolbarAdulto"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Adulto"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="35dp"
                app:fontFamily="sans-serif-condensed-light" />

            <ImageView
                android:id="@+id/imagenPerroAdulto"
                android:layout_width="270dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/dogrealistas" />

            <TextView
                android:id="@+id/textQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="¿Cómo es tu mascota?"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"
                app:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/textSizeAdulto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="30dp"
                android:text="Tamaño"
                android:textColor="@color/colorBlack"
                android:textSize="25dp"
                app:fontFamily="sans-serif-light" />

            <SeekBar
                android:id="@+id/seekBarSizeAdulto"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:max="50" />

            <TextView
                android:id="@+id/textSizeValueAdulto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Miniatura"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp"
                app:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/textWeightAdulto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:text="@string/Weight"
                android:textColor="#000"
                android:textSize="24sp"
                app:fontFamily="sans-serif-light" />

            <SeekBar
                android:id="@+id/seekBarWeightAdulto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:max="100" />

            <TextView
                android:id="@+id/textActivityAdulto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:text="Actividad física"
                android:textColor="#000"
                android:textSize="24sp"
                app:fontFamily="sans-serif-light" />

            <SeekBar
                android:id="@+id/seekBarActivityAdulto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:max="100" />

            <Button
                android:id="@+id/buttonComenzar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonrec"
                android:fontFamily="sans-serif-condensed-light"
                android:onClick="ActivateFuzzySystem"
                android:text="Siguiente"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>